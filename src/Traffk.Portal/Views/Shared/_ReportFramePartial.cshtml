@using Traffk.Bal.ReportVisuals
@using Traffk.Portal.Models.ReportingModels
@model IReportViewModel

@section pageAlerts {
    <div class="alert alert-info alert-dismissable" id="message-exported-alert" style="display: none">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i class="fa fa-check" aria-hidden="true"></i> You exported report @Model.ViewName
    </div>
    <div class="alert alert-info alert-dismissable" id="MessageSentAlert" style="display: none">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i class="fa fa-check" aria-hidden="true"></i> Your message has been sent to 143 recipients.
    </div>
}    

<div class="panel medium-padding">
    <div class="panel-body report-embed-container @(Model != null && Model.RenderingAttributes.HasFlag(ReportDetails.RenderingAttributeFlags.Vertical) ? "report-tall" : "")" id="reportContainer">
    </div>
</div>

@{await Html.RenderPartialAsync("~/Views/Reporting/_ExportReportPartial.cshtml"); }

