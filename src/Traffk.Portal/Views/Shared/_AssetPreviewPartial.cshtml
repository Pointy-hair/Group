@model AssetPreviewModel
@if (Model.ContentUrl != null)
{
    <div>
        <a href="@Model.ContentUrl">
            @if (Model.AssetType == AssetPreviewModel.AssetTypes.Image)
            {
                <img src="@Model.ContentUrl" width="50" alt="@Model.ContentUrl" />
                @System.IO.Path.GetFileName(Model.ContentUrl.ToString())
            }
            else
            {
                @Model.ContentUrl
            }
        </a> 
        @if (Model.DeleteScriptName != null)
        {
            <span class="glyphicon glyphicon-remove-circle clickable confirm-on-click" confirmHeading="Are you sure?" confirmMessage="Do you want to delete this asset?" aria-hidden="true" onclick="@(Model.DeleteScriptName)(this, '@Model.ContextKey', '@Model.AssetKey')"></span>
        }
        <br />
    </div>
}
