@model TraffkPortal.Models.ApplicationModels.RegistrationModel
@{
    Layout = "~/Views/Application/_LayoutApplication.cshtml";
    ViewData.SetTitleAndHeading("Registration Settings");
    ViewData.HasPageMenuItems(true);
    ViewData.IsFormPage(true);
}

<form asp-action="RegistrationSettings" class="inline-form html-editor-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <label asp-for="UsersCanSelfRegister" class="col-sm-1"></label>
                <div class="col-sm-10">
                    <input asp-for="UsersCanSelfRegister" />
                    <span asp-validation-for="UsersCanSelfRegister" class="text-danger" />
                </div>
            </div>
            <div class="form-row">
                <label asp-for="SelfRegistrationMandatoryEmailAddressHostnamesString" class="col-sm-1"></label>
                <div class="col-sm-10">
                    <textarea asp-for="SelfRegistrationMandatoryEmailAddressHostnamesString" class="form-control htmleditor"></textarea>
                    <span asp-validation-for="SelfRegistrationMandatoryEmailAddressHostnamesString" class="text-danger" />
                </div>
            </div>
    <div class="form-row">
        <label class="col-sm-1"></label>
        <div class="col-sm-10">
            <input type="submit" value="Save" class="btn btn-default btn-primary btn-large" />
        </div>
    </div>
</form>
