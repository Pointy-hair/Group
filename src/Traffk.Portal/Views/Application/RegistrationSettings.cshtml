@model TraffkPortal.Models.ApplicationModels.RegistrationModel
@{
    Layout = "_LayoutApplication.cshtml";
    ViewData.SetTitleAndHeading("Registration Settings");
}

<form asp-action="RegistrationSettings">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UsersCanSelfRegister" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UsersCanSelfRegister" class="form-control"  />
                <span asp-validation-for="UsersCanSelfRegister" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SelfRegistrationMandatoryEmailAddressHostnamesString" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="SelfRegistrationMandatoryEmailAddressHostnamesString" class="form-control htmleditor"></textarea>
                <span asp-validation-for="SelfRegistrationMandatoryEmailAddressHostnamesString" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
