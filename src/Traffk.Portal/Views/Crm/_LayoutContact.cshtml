@using static TraffkPortal.Controllers.CrmController
@{
    Layout = "~/Views/Shared/_LayoutHeroEntity.cshtml";
    var pageKey = (PageKeys)ViewData[ViewDataKeys.PageKey];
    var entityName = ViewData[ViewDataKeys.EntityTitle].ToString();
    var entityId = ViewData[ViewDataKeys.EntityId].ToString();
    var isNewEntity = string.IsNullOrEmpty(entityId);
    var isPerson = ContactTypes.Person == (ContactTypes)ViewData["ContactType"];
    var contactEmailAddress = ViewData["ContactEmailAddress"] as string;
    if (isNewEntity)
    {
        ViewData.SetTitleAndHeading("Create " + ViewData["ContactType"]);
    }
    bool isHealthSection;
    switch (pageKey)
    {
        case PageKeys.CareAlerts:
        case PageKeys.Demographics:
        case PageKeys.Eligibility:
        case PageKeys.HighCostDiagnosis:
        case PageKeys.HistoricalScores:
        case PageKeys.MedicalClaims:
        case PageKeys.MemberPCP:
        case PageKeys.Participation:
        case PageKeys.Pharmacy:
        case PageKeys.QualityMetrics:
        case PageKeys.Scores:
        case PageKeys.Visit:
            isHealthSection = true;
            break;
        default:
            isHealthSection = false;
            break;
    }
}
@section navItems {
    <li><a asp-action="@ActionNames.ContactBackground" asp-route-id="@entityId" class="@(pageKey==PageKeys.Background?"current-section":"")">Personal</a></li>
    <li><a asp-action="@ActionNames.ContactMessages" asp-route-id="@entityId" class="@(pageKey==PageKeys.Messages?"current-section":"")">Messages</a></li>
    <li><a asp-action="@ActionNames.ContactNotes" asp-route-id="@entityId" class="@(pageKey==PageKeys.Notes?"current-section":"")">Notes</a></li>
    @*
    <li><a asp-action="@ActionNames.ContactRelationships" asp-route-id="@entityId" class="@(pageKey==PageKeys.Relationships?"current-section":"")">Relationships</a></li>
    *@
    @if (isPerson)
        {
        <li class="dropdown @(isHealthSection?"current-section":"")" role="presentation">
            <a aria-expanded="false" aria-haspopup="true" role="button" data-toggle="dropdown" class="dropdown-toggle" href="#">
                Health
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.CareAlertsList" class="@(pageKey==PageKeys.CareAlerts?"current-section":"")">Care Alerts</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.Demographic" class="@(pageKey==PageKeys.Demographics?"current-section":"")">Demographics</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.EligibilityList" class="@(pageKey==PageKeys.Eligibility?"current-section":"")">Eligibility</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.HighCostDiagnosis" class="@(pageKey==PageKeys.HighCostDiagnosis?"current-section":"")">HighCostDiagnosis</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.MedicalClaimsList" class="@(pageKey==PageKeys.MedicalClaims?"current-section":"")">Medical Claims</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.MemberPcp" class="@(pageKey==PageKeys.MemberPCP?"current-section":"")">MemberPCP</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.ParticipationList" class="@(pageKey==PageKeys.Participation?"current-section":"")">Participation</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.PharmacyList" class="@(pageKey==PageKeys.Pharmacy?"current-section":"")">Pharmacy</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.Score" class="@(pageKey==PageKeys.Scores?"current-section":"")">Score</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.HistoricalScoreList" class="@(pageKey==PageKeys.HistoricalScores?"current-section":"")">Scores (historical)</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.QualityMetricsList" class="@(pageKey==PageKeys.QualityMetrics?"current-section":"")">Quality Metrics</a></li>
                <li><a asp-controller="Crm" asp-route-id="@entityId" asp-action="@ActionNames.Health.VisitList" class="@(pageKey==PageKeys.Visit?"current-section":"")">Visits</a></li>
            </ul>
        </li>
    }
    @RenderSection("navItems", required: false)
}
@section pageAlerts {
    <div class="alert alert-success" role="alert" id="MessageSentAlert" style="display:none">Message has been sent.</div>
    <div class="alert alert-success" role="alert" id="NoteCreatedAlert" style="display:none">Note was created.</div>
    @RenderSection("pageAlerts", required: false)
}
@section pageActionButtons {
    <button type="button" class="btn btn-default" asp-action="@ActionNames.ContactList">Contacts List</button>
    @if (!isNewEntity)
    {
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#createNoteModal">Create Note</button>
        if (contactEmailAddress != null && await User.HasPermission(AuthorizationService, PermissionNames.DirectMessaging))
        {
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#sendMessageModal">Send Message</button>
        }
    }
    @RenderSection("pageActionButtons", required: false)
}
@section pageDialogs {
    @RenderSection("pageDialogs", required: false)
    <div id="createNoteModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create note regarding @entityName</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="NewNoteContent">Content</label>
                            <div class="col-md-10">
                                <textarea name="NewNoteContent" class="form-control" id="NewNoteContent"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="createNote()">Create</button>
                    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div id="sendMessageModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Email @entityName (@contactEmailAddress)</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="MessageTemplate">Message Template</label>
                            <div class="col-md-10">
                                <select asp-items="ViewBag.EmailTemplateItems" id="MessageTemplate" name="MessageTemplate"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="DirectMessageSubject">Subject</label>
                            <div class="col-md-10">
                                <textarea name="DirectMessageSubject" class="form-control" id="DirectMessageSubject"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="DirectMessageText">Body</label>
                            <div class="col-md-10">
                                <textarea name="DirectMessageBody" class="form-control" id="DirectMessageBody"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="sendDirectMessage()">Send</button>
                    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script type="text/javascript">
        function sendDirectMessage() {
            var postData = {
                templateId: $("#MessageTemplate").val(),
                subject: $("#DirectMessageSubject").val(),
                body: $("#DirectMessageBody").val()
            };
            $.post(
            "/Crm/Contacts/@entityId/SendDirectMessage",
            postData,
            function () {
                $("#MessageSentAlert").html("Message [" + postData.subject + "] was successfully sent.");
                $("#MessageSentAlert").show();
            });
        }
        function createNote() {
            var postData = {
                content: $("#NewNoteContent").val(),
                parentNoteId: null
            };
            $.post(
            "/Crm/Contacts/@entityId/CreateNote",
            postData,
            function () {
                $("#NoteCreatedAlert").show();
            });
        }
    </script>
    @RenderSection("scripts", required: false)
}
@RenderBody()
