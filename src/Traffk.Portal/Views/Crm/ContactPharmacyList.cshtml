@using static TraffkPortal.Controllers.CrmController
@model IEnumerable<Pharmacy>
@{
    Layout = "~/Views/Crm/_LayoutContact.cshtml";
    ViewData.IsListingPage(true);
    ViewData.SetTitleAndHeading(CrmController.ViewNames.Health.PharmacyList.ToCrmHeading());
    ViewData.HasPageMenuItems(false);

}
@section listingTable
    {
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(z => z.svc_filled_date)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.svc_ndc_desc)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.svc_rx_class_desc)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.rev_coinsurance_amt)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.rev_copay_amt)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.rev_deductible_amt)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.rev_paid_amt)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="@ActionNames.Health.Pharmacy" asp-route-id="@ViewContext.GetRouteValue()" asp-route-pharmacyItemId="@item.rev_transaction_num">@item.svc_filled_date</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.svc_ndc_desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.svc_rx_class_desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rev_coinsurance_amt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rev_copay_amt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rev_deductible_amt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rev_paid_amt)
                </td>
            </tr>
        }
    </tbody>
</table>

}
