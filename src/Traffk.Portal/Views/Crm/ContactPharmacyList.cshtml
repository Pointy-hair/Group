@using static TraffkPortal.Controllers.CrmController
@model IEnumerable<Traffk.Bal.Data.Rdb.TraffkTenantModel.Pharmacy>
@{
    Layout = "~/Views/Crm/_LayoutContact.cshtml";
    ViewData.IsListingPage(true);
    ViewData.SetTitleAndHeading(CrmController.ViewNames.Health.PharmacyList.ToCrmHeading());
    ViewData.HasPageMenuItems(false);

}
@section listingTable
    {
<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>
            @Html.SortableHeaderFor(z => z.PharmacyId, null, null, null, "Pharmacy ID")
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.PrescriptionFilledDd, null, null, null, "Fill Date")
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.NationalDrugCodePackageMcid, null, null, null, "Package ID")
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.CoinsuranceAmt, null, null, null, "Coinsurance Amt")
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.CopayAmt, null, null, null, "Copay Amt")
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.DeductibleAmt, null, null, null, "Deductible Amt")
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.PaidAmt, null, null, null, "Paid Amt")
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="@ActionNames.Health.Pharmacy" asp-route-id="@ViewContext.GetRouteValue()" asp-route-pharmacyItemId="@item.PharmacyId">@item.PharmacyId</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrescriptionFilledDd.CalendarDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalDrugCodePackageMcid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoinsuranceAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CopayAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeductibleAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidAmt)
                </td>
            </tr>
        }
    </tbody>
</table>

}
