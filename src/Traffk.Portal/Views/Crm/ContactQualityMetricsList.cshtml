@using static TraffkPortal.Controllers.CrmController
@model IEnumerable<QualityMetric>
@{
    Layout = "~/Views/Crm/_LayoutContact.cshtml";
    ViewData.IsListingPage(true);
    ViewData.SetTitleAndHeading(CrmController.ViewNames.Health.QualityMetricsList.ToCrmHeading());
    ViewData.HasPageMenuItems(false);

}
@section listingTable
    {
<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>
            @Html.SortableHeaderFor(z => z.dw_record_id)
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.measureName)
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.startDate)
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.EndDate)
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.PositiveNegative)
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.numerator)
        </th>
        <th>
            @Html.SortableHeaderFor(z => z.denomenator)
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="@ActionNames.Health.QualityMetric" asp-route-id="@ViewContext.GetRouteValue()" asp-route-recordId="@item.dw_record_id">@item.dw_record_id</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.measureName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.startDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositiveNegative)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numerator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.denomenator)
                </td>
            </tr>
        }
    </tbody>
</table>

}
