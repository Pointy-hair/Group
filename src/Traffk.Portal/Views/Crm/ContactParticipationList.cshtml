@using static TraffkPortal.Controllers.CrmController
@model IEnumerable<Participation>
@{
    Layout = "~/Views/Crm/_LayoutContact.cshtml";
    ViewData.IsListingPage(true);
    ViewData.SetTitleAndHeading(CrmController.ViewNames.Health.ParticipationList.ToCrmHeading());
    ViewData.HasPageMenuItems(false);

}
@section listingTable
    {
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(z => z.program_name)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.program_status)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.program_start_date)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.program_end_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="@ActionNames.Health.Participation" asp-route-id="@ViewContext.GetRouteValue()" asp-route-recordId="@item.dw_record_id">@item.program_name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.program_status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.program_start_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.program_end_date)
                </td>
            </tr>
        }
    </tbody>
</table>

}
