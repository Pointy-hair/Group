@using static TraffkPortal.Controllers.CrmController
@model IEnumerable<CareAlert>
@{
    Layout = "~/Views/Crm/_LayoutContact.cshtml";
    ViewData.IsListingPage(true);
    ViewData.SetTitleAndHeading(CrmController.ViewNames.Health.CareAlertsList.ToCrmHeading());
    ViewData.HasPageMenuItems(false);
}
@section listingTable
    {
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(z => z.CareAlertId)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.CareAlertDd)
            </th>
            @*<th>
                @Html.SortableHeaderFor(z => z.care_alert_desc)
            </th>*@
            <th>
                @Html.SortableHeaderFor(z => z.MetricName)
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="@ActionNames.Health.CareAlert" asp-route-id="@ViewContext.GetRouteValue()" asp-route-recordId="@item.CareAlertId">@item.CareAlertId</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CareAlertDd)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.care_alert_desc)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.MetricName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
