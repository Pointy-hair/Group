@model TraffkPortal.Models.CommunicationModels.CreativeModel
<input type="hidden" asp-for="CreativeId" />
<input type="hidden" asp-for="TemplateEngineType" value="@Traffk.Bal.Communications.TemplateEngineTypes.TraffkDollarString" />
<div class="form-group">
    <label asp-for="CreativeTitle" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="CreativeTitle" class="form-control" />
        <span asp-validation-for="CreativeTitle" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <div class="row">
        <label asp-for="ModelTypeStringValue" class="control-label"></label>
    </div>
    <div class="row">
        <select asp-for="ModelTypeStringValue" asp-items="ViewBag.ModelListItems"></select>
    </div>
    <div class="row">
        <input asp-for="CreativeSettings.EmailSubject" class="form-control" />
        <textarea asp-for="CreativeSettings.EmailHtmlBody" class="form-control htmleditor"></textarea>
        <span asp-validation-for="CreativeSettings.EmailHtmlBody" class="text-danger" />
        <textarea asp-for="CreativeSettings.EmailTextBody" class="form-control"></textarea>
        <textarea asp-for="CreativeSettings.TextMessageBody" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Attachments</label>
        <div class="col-md-10">
            @foreach (var attachmentAsset in Model.AttachmentAssets)
            {
                @await Html.PartialAsync("_AssetPreviewPartial", attachmentAsset)
            }
            <div>
                <input asp-for="NewAttachments" class="form-control" multiple="multiple" />
            </div>
        </div>
    </div>
</div>
