@model Creative
@using static TraffkPortal.Controllers.CommunicationsController
@{
    if (Model.CreativeId <= 0)
    {
        ViewData.SetTitleAndHeading("Create New Creative");
    }
    else
    {
        ViewData.SetTitleAndHeading($"{Model.CreativeTitle} ({Model.CreativeId})");
    }
}

<form asp-action="@ActionNames.CreativeSave" asp-route-id="@Model.CreativeId">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CreativeId" />
        <input type="hidden" asp-for="TemplateEngineType" value="@Template.TemplateEngineTypes.TraffkDollarString" />
        <div class="form-group">
            <label asp-for="CreativeTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreativeTitle" class="form-control" />
                <span asp-validation-for="CreativeTitle" class="text-danger" />
            </div>
        </div>

        <div class="form-group">

            <div class="row">
                <label asp-for="ModelType" class="control-label"></label>
            </div>
            <div class="row">
                <select asp-for="ModelType" asp-items="ViewBag.ModelListItems"></select>
            </div>
            <div class="row">
                <input asp-for="CreativeSettings.EmailSubject" class="form-control" />
                <textarea asp-for="CreativeSettings.EmailHtmlBody" class="form-control htmleditor"></textarea>
                <span asp-validation-for="CreativeSettings.EmailHtmlBody" class="text-danger" />
                <textarea asp-for="CreativeSettings.EmailTextBody" class="form-control"></textarea>
                <textarea asp-for="CreativeSettings.TextMessageBody" class="form-control"></textarea>
            </div>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Templates">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
