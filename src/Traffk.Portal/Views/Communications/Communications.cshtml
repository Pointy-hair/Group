@model IEnumerable<Communication>
@using static TraffkPortal.Controllers.CommunicationsController
@{
    Layout = "~/Views/Shared/_LayoutListing2.cshtml";
    ViewData.SetTitleAndHeading("Communications", "Your active communications.");
}
@*@section listingActionButtons
