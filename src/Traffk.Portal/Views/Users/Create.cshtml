@model TraffkPortal.Models.UserModels.CreeateUserModel
@{
    ViewData.SetTitleAndHeading("Create Users");
}

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Emails" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Emails" class="form-control" ></textarea>
                <span asp-validation-for="Emails" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignedRoleIds" class="col-md-2 control-label">Roles</label>
            <div class="col-md-10">
                <select asp-for="AssignedRoleIds"
                        asp-items="ViewBag.RoleListItems"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SendInvitationEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SendInvitationEmail" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="InvitationText" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="InvitationText" class="form-control"></textarea>
                <span asp-validation-for="InvitationText" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <button type="button" class="btn btn-default" asp-action="Index">Back to List</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
