@model Traffk.Portal.Models.TenantModels.TenantSettingsModel
@using Traffk.Portal.Models.TenantModels
TraffkPortal.Controllers.TenantsController
@{
    Layout = "~/Views/Tenants/_LayoutTenant.cshtml";
    ViewData.SetTitleAndHeading(Model.TenantName);
    ViewData.IsFormPage(true);
}
<form asp-action="Edit" class="inline-form">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TenantId" />
        <div class="col-sm-12">
            <div class="form-row">
                <label asp-for="LoginDomain"></label>
                <input asp-for="LoginDomain" class="form-control" readonly="readonly" />
                <span asp-validation-for="LoginDomain" class="text-danger" />
            </div>
            <div class="form-row">
                <label asp-for="ParentTenantId"></label>
                <input asp-for="ParentTenantId" class="form-control" readonly="readonly" />
                <span asp-validation-for="ParentTenantId" class="text-danger" />
            </div>
            <div class="form-row">
                <label asp-for="TenantName"></label>
                <input asp-for="TenantName" class="form-control" />
                <span asp-validation-for="TenantName" class="text-danger" />
            </div>
            <div class="form-row">
                <label asp-for="SenderAddress"></label>
                <input asp-for="SenderAddress" class="form-control" />
                <span asp-validation-for="SenderAddress" class="text-danger" />
            </div>
            <div class="form-row">
                <label asp-for="SenderName"></label>
                <input asp-for="SenderName" class="form-control" />
                <span asp-validation-for="SenderName" class="text-danger" />
            </div>
            <div class="form-row">
                <label asp-for="RequiresEmailAccountValidation"></label>
                <input asp-for="RequiresEmailAccountValidation" />
            </div>
            <div class="form-row">
                <label asp-for="RequiresTwoFactorAuthentication"></label>
                <input asp-for="RequiresTwoFactorAuthentication" />
            </div>
            <div class="form-row">
                <label asp-for="ProtectedHealthInformationViewableByEmailAddressHostnamesString"></label>
                <textarea asp-for="ProtectedHealthInformationViewableByEmailAddressHostnamesString" class="form-control"></textarea>
                <span asp-validation-for="ProtectedHealthInformationViewableByEmailAddressHostnamesString" class="text-danger" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-right">
            <input type="submit" value="Save" class="btn btn-default btn-primary btn-large" />
        </div>
    </div>
</form>
