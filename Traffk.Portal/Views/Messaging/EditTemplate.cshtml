@using TraffkPortal.Models.MessagingModels
@model TemplateModel
@{
    if (Model.TemplateId <= 0)
    {
        ViewData.SetTitleAndHeading("Create Template");
    }
    else
    {
        ViewData.SetTitleAndHeading($"{Model.TemplateName} ({Model.TemplateId})");
    }
}

<form asp-action="EditTemplate">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TemplateId" />
        <div class="form-group">
            <label asp-for="TemplateName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TemplateName" class="form-control" />
                <span asp-validation-for="TemplateName" class="text-danger" />
            </div>
        </div>
        @await Html.PartialAsync("_EditTemplatePartial", Model)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Templates">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
