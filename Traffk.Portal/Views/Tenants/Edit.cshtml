@using static TraffkPortal.Controllers.TenantsController
@model TraffkPortal.Models.TenantModels.TenantSettingsModel
@{
    Layout = "_LayoutTenant.cshtml";
    ViewData.SetTitleAndHeading(Model.TenantName);
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TenantId" />
        <div class="form-group">
            <label asp-for="LoginDomain" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LoginDomain" class="form-control" readonly="readonly"  />
                <span asp-validation-for="LoginDomain" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ParentTenantId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ParentTenantId" class="form-control" readonly="readonly" />
                <span asp-validation-for="ParentTenantId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TenantName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TenantName" class="form-control" />
                <span asp-validation-for="TenantName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SenderAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SenderAddress" class="form-control" />
                <span asp-validation-for="SenderAddress" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SenderName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SenderName" class="form-control" />
                <span asp-validation-for="SenderName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RequiresEmailAccountValidation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RequiresEmailAccountValidation" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RequiresTwoFactorAuthentication" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RequiresTwoFactorAuthentication" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProtectedHealthInformationViewableByEmailAddressHostnamesString" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="ProtectedHealthInformationViewableByEmailAddressHostnamesString" class="form-control"></textarea>
                <span asp-validation-for="ProtectedHealthInformationViewableByEmailAddressHostnamesString" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
